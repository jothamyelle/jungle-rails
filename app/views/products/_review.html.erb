<dl class="dl-horizontal">
  <dt>Reviewed By</dt>
  <dd><%= user.name %></dd>
  <dd><%= review.description %></dd>
  <dt>Rating</dt>
  <dd><%= review.rating %></dd>
  <% if current_user.id === user.id %>
  <dd>
    <%= link_to fa_icon('trash'), review, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
  </dd>  
  <% end %>
</dl>